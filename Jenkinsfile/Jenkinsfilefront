pipeline {
    agent any
    
    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/CarlosS123A/reto_devops_front.git'
            }
        }
        stage('Build') {
            steps {
                sh 'docker --version'
                sh 'docker build -t gcr.io/devops-reto-tismart/frontend-app:latest .'
            }
        }
        stage('Push to GCP') {
            steps {
                withCredentials([file(credentialsId: 'gcp-key', variable: 'GOOGLE_APPLICATION_CREDENTIALS')]) {
                    sh '''
                        gcloud auth activate-service-account --key-file $GOOGLE_APPLICATION_CREDENTIALS
                        gcloud config set project devops-reto-tismart
                        gcloud auth configure-docker
                        docker push gcr.io/devops-reto-tismart/frontend-app:latest
                    '''
                }
            }
        }
        stage('Deploy to Kubernetes') {
            steps {
                sh 'kubectl version --client'
                sh '''
                    kubectl apply -f k8s/deployment.yaml
                    kubectl apply -f k8s/service.yaml
                '''
            }
        }
    }
}
